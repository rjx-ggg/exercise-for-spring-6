<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 引用外部bean -->
    <bean id="dept" class="com.ssll.iocxml.ditest.Dept">
        <property name="dname" value="栗子云部门"></property>
    </bean>

    <bean id="emp" class="com.ssll.iocxml.ditest.Emp">
        <property name="ename" value="栗子云"></property>
        <property name="age" value="9个月"></property>
        <property name="dept" ref="dept"></property>
    </bean>

    <!-- 引用内部bean -->
    <bean id="empInner" class="com.ssll.iocxml.ditest.Emp">
        <property name="ename" value="栗子云"></property>
        <property name="age" value="9个月"></property>
        <property name="dept">
            <bean id="deptInner" class="com.ssll.iocxml.ditest.Dept">
                <property name="dname" value="内部栗子云部门"></property>
            </bean>
        </property>
    </bean>

    <!-- 级联属性赋值 -->
    <bean id="empLink" class="com.ssll.iocxml.ditest.Emp">
        <property name="ename" value="栗子云11"></property>
        <property name="age" value="9个月"></property>
        <property name="dept" ref="dept"></property>
        <property name="dept.dname" value="ssll big dept"></property>
    </bean>









</beans>