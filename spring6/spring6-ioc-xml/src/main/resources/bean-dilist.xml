<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 引用外部bean -->
    <bean id="dept" class="com.ssll.iocxml.ditest.Dept">
        <property name="dname" value="栗子云部门"></property>
        <property name="emps">
            <list>
                <ref bean="emp"></ref>
                <ref bean="emp1"></ref>
                <ref bean="emp2"></ref>
            </list>

        </property>

    </bean>

    <bean id="emp" class="com.ssll.iocxml.ditest.Emp">
        <property name="ename" value="栗子云"></property>
        <property name="age" value="9个月"></property>
        <property name="dept" ref="dept"></property>
        <property name="loves">
            <array>
                    <value>篮球</value>
                    <value>足球</value>
                    <value>乒乓球</value>
            </array>
        </property>

    </bean>


    <bean id="emp1" class="com.ssll.iocxml.ditest.Emp">
        <property name="ename" value="栗子云1"></property>
        <property name="age" value="9个月1"></property>
        <property name="loves">
            <array>
                <value>篮球1</value>
                <value>足球2</value>
                <value>乒乓球3</value>
            </array>
        </property>
    </bean>
    <bean id="emp2" class="com.ssll.iocxml.ditest.Emp">
        <property name="ename" value="栗子云2"></property>
        <property name="age" value="9个月2"></property>
        <property name="loves">
            <array>
                <value>篮球2</value>
                <value>足球2</value>
                <value>乒乓球2</value>
            </array>
        </property>
    </bean>










</beans>